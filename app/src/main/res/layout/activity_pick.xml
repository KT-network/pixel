<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/sb_color"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="360"
            android:progress="0" />

        <SeekBar
            android:id="@+id/sb_sat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/sb_color"
            android:max="100"
            android:progress="0" />


        <SeekBar
            android:id="@+id/sb_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/sb_sat"
            android:max="100"
            android:progress="0" />

        <com.kt.ks_pixel.PixImage.ColorPick.ColorPicker
            android:id="@+id/cp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/sb_value" />


    </RelativeLayout>


</androidx.core.widget.NestedScrollView>